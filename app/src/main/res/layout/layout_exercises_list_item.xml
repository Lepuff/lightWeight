<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/background_item"
    app:cardCornerRadius="2dp"
    app:cardElevation="10dp"

    app:cardPreventCornerOverlap="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/exercise_linear_layout">

            <TextView
                android:id="@+id/exercise_name_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_content" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/set"
                    android:textColor="@color/text_content"
                    />
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/weight"
                    android:textColor="@color/text_content"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/reps"
                    android:textColor="@color/text_content"/>



            </LinearLayout>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sets_recycle_view"
            app:layout_constraintTop_toBottomOf="@id/exercise_linear_layout"
            app:layout_constraintBottom_toTopOf="@id/new_set_button"/>
        <Button
            android:id="@+id/new_set_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:drawableStart="@drawable/ic_add_yellow_24dp"
            android:drawableTint="@color/text_button"
            android:text="@string/add_set"
            android:textColor="@color/text_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <ImageButton
            android:layout_width="40dp"
            android:id="@+id/delete_exercise_button"
            android:layout_height="40dp"
            android:background="@drawable/md_transparent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_delete_forever_yellow_24dp"
            android:contentDescription="@string/delete_exercise_button" /><!-- ToDo fix description and add strings instead -->

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>