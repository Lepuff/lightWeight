<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:dialogTheme">@style/DialogStyle</item>
        <item name="colorPrimary">@color/background_item</item>
        <item name="colorPrimaryDark">@color/background_item</item>
        <item name="colorAccent">@color/text_content</item>
        <item name="android:textColorPrimary">@color/text_content</item>
        <item name="android:textColor">@color/text_content</item>
        <item name="titleTextColor">@color/text_content</item>    </style>


    <style name="ErrorText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/text_item</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="HintText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/text_item</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextInputLayoutAppearance" parent="Widget.Design.TextInputLayout">
        <item name="hintTextAppearance">@style/HintText</item>
        <item name="errorTextAppearance">@style/ErrorText</item>
        <item name="android:textColor">@color/text_item</item>
        <item name="android:textColorHint">@color/text_item_unfocused</item>
        <item name="colorControlNormal">@color/text_item_unfocused</item>
        <item name="colorControlActivated">@color/text_item</item>
        <item name="colorControlHighlight">@color/text_item</item>

    </style>


    <style name="DialogStyle">
        <item name="textColorAlertDialogListItem">@color/text_item</item>
        <item name="android:background">@color/background_item</item>
        <item name="android:windowBackground">@drawable/md_transparent</item>
        <item name="android:windowFrame">@drawable/md_transparent</item>
        <item name="android:textColor">@color/text_content</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:drawableStart">@drawable/ic_add_yellow_24dp</item>
        <item name="iconTint">@color/text_content</item>
        <item name="android:windowIsFloating">true</item>
        
        <item name="android:windowTitleStyle">@style/setWindowTitleStyle</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="itemTextColor">@color/text_content</item>

