<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/background_item"
    app:cardCornerRadius="2dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true"

    app:cardPreventCornerOverlap="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:id="@+id/sets_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView

                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/text_content"
                android:id="@+id/sets_number_textView"/>

            <EditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textColor="@color/text_content"
                android:autofillHints="@string/weight"
                android:inputType="number"
                android:gravity="center"
                android:id="@+id/sets_weight_editText"
                android:hint="@string/weight"/>

            <EditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textColor="@color/text_content"
                android:autofillHints="@string/reps"
                android:inputType="number"
                android:gravity="center"
                android:id="@+id/sets_reps_editText"
                android:hint="@string/reps"
                />

            <Button
                android:layout_width="50dp"
                android:id="@+id/delete_set_button"
                android:layout_height="wrap_content"
                android:background="@drawable/md_transparent"
                android:drawableStart="@drawable/ic_delete_forever_yellow_24dp" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>