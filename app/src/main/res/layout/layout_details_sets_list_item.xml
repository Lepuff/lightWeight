<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/background_item"
    app:cardCornerRadius="2dp"
    app:cardElevation="10dp"
    app:cardPreventCornerOverlap="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView

                android:id="@+id/details_sets_number_textView"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textColor="@color/text_content" />

            <EditText
                android:id="@+id/details_sets_weight_textView"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:autofillHints="@string/weight"
                android:inputType="none"
                android:textColor="@color/text_content" />

            <EditText
                android:id="@+id/details_sets_reps_textView"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:autofillHints="@string/reps"
                android:inputType="none"
                android:textColor="@color/text_content" />


        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>