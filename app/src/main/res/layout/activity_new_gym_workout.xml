<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ui.newWorkout.gym.NewGymWorkoutActivity">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/exercise_recycle_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/new_gym_add_exercise_button"/>

        <Button
            android:id="@+id/new_gym_add_exercise_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:drawableStart="@drawable/ic_add_yellow_24dp"
            android:drawableTint="@color/text_button"
            android:text="@string/add_exercise"
            android:textColor="@color/text_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/exercise_recycle_view"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <Button
            android:layout_width="wrap_content"
            android:id="@+id/new_gym_save_workout_button"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:textColor="@color/text_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="@string/save_workout"/>
</androidx.constraintlayout.widget.ConstraintLayout>