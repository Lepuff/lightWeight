<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/background_item"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:id="@+id/sets_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView

                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/text_content"
                android:id="@+id/sets_number_textView"/>

            <EditText

                android:textColorHint="@color/details"
                android:backgroundTint="@color/details"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textColor="@color/text_content"
                android:outlineAmbientShadowColor="@color/details"
                android:inputType="number"
                android:gravity="center"
                android:id="@+id/sets_weight_editText"
                tools:ignore="Autofill,LabelFor"
                 />

            <EditText
                android:backgroundTint="@color/details"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textColor="@color/text_content"
                android:inputType="number"
                android:gravity="center"
                android:id="@+id/sets_reps_editText"
                tools:ignore="Autofill,LabelFor" />

            <ImageButton
                android:id="@+id/delete_set_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/transparent"
                android:contentDescription="@string/delete_exercise_button"
                android:src="@drawable/ic_delete_forever_yellow_24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>